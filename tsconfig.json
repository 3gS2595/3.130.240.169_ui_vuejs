{
  "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
      "verbatimModuleSyntax": false,
    "types": [
      "webpack-env"
    ],
    "typeRoots": [
    "./src/@types",
    "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "src/declaration.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]   
}
